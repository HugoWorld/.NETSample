            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"  x:Name="btnSetBorder"   Cursor="Hand" SnapsToDevicePixels="true" BorderThickness="0" Background="{StaticResource PopWinAddBtnNorm}" >
