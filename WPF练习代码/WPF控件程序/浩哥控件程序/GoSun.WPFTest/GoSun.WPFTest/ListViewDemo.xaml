<Window x:Class="GoSun.WPFTest.ListViewDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListViewDemo" Height="240" Width="300">
    <StackPanel x:Name="stackPanel" Background="LightBlue">
        <ListView x:Name="ListViewStudent" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="90" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="90" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Age" Width="90" DisplayMemberBinding="{Binding Age}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
