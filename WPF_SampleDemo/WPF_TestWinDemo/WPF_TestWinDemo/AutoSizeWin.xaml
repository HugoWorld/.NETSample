<Window x:Class="WPF_TestWinDemo.AutoSizeWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TestWinDemo"
        mc:Ignorable="d"
        Title="AutoSizeWin" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock x:Name="tb1" Width="160" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80,5,20,5"
                      FontSize="14" />
        </StackPanel>
        <Button Grid.Row="3" Width="80" Height="30" Click="Button_Click" Content="点我啊" />
    </Grid>
</Window>
