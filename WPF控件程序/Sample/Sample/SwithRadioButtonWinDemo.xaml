<Window x:Class="GosunRobotClientControlStyle.SwithRadioButtonWinDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SwithRadioButtonWinDemo" Height="300" Width="487">
    <Window.Resources>
        <ImageBrush x:Key="Switch_back" ImageSource="/Images/ControlSkin/SwitchButton/切换_背景.png" Stretch="Uniform"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal"  Width="266" Height="48" Background="{StaticResource Switch_back}" Margin="295,208,167,205">
          
        </StackPanel>
        <RadioButton GroupName="Mode" Style="{StaticResource ResourceKey=SwitchModeStyle}"  Content="云台控制"  Width="133" Height="48" HorizontalAlignment="Left" IsChecked="True" />
        <RadioButton GroupName="Mode" Style="{StaticResource ResourceKey=SwitchModeStyle}"  Content="底盘控制" Width="133" Height="48" HorizontalAlignment="Right" IsChecked="False" />
    </Grid>
</Window>
