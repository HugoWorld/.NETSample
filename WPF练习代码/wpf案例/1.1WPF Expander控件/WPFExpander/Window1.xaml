		<RadioButton x:Name="rb2" Content="Up" Margin="0,98.116,162.193,0" VerticalAlignment="Top" Click="rb2_Click" HorizontalAlignment="Right"/>
		<RadioButton x:Name="rb3" Content="Left" Margin="0,0,155.193,91.767" Click="rb3_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
		<RadioButton x:Name="rb4" Content="Right" Margin="0,0,143.193,52.767" Click="rb4_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
	</Grid>
</Window>