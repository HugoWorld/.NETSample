                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="btnSetBorder" Value="{StaticResource PopWinAddBtnMouseOver}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="btnSetBorder" Value="{StaticResource PopWinAddBtnClick}"/>
